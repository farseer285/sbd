#!/usr/bin/env python

import argparse
import sys

from sbd.server import IridiumServer

parser = argparse.ArgumentParser(description="Iridium SBD message server")
parser.add_argument("--host", help="client IP address",
        default="0.0.0.0")
parser.add_argument("--port", help="the port to listen upon",
        default=10800)
parser.add_argument("directory", help="the target directory in which to store messages and logs")

args = parser.parse_args()

server = IridiumServer((args.host, args.port), args.directory)
server.serve_forever()
