#!/usr/bin/env python

import sys

from sbd.server import IridiumServer

if len(sys.argv) != 3:
    print "Server requires two arguments"
    print "Usage: iridium-server host target-directory"
    sys.exit(1)

HOST = sys.argv[1]
PORT = 10800

server = IridiumServer((HOST, PORT), sys.argv[2])

server.serve_forever()
